<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<div class="cocktail-card">

				<div class="cocktail-card-head">

					<%= link_to cocktails_path do %>
					<%= icon('fas', 'glass-martini') %>
					list all
					<% end %>

					
				</div>

				<h1>
					<%= @cocktail.name %>
				</h1>

				<div class="cocktails-card-body">
					<table> 	
						<tr><ul>



							<td class="row-table1">	<% @cocktail.doses.each do |dose| %> 
								<%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
								<li> <%= icon('fas', 'trash') %> 
								<% end %> 
								 <%= dose.description %> of
								<%= dose.ingredient.name %></li>
								<% end %></td>


								<td class="row-table2">	<%= link_to new_cocktail_dose_path(@cocktail) do %>
									<%= icon('fas', 'plus') %>
									<p class="small-text">add an ingredient</p>
									<% end %></td>




						</tr>
							</table>
						</div>








					</div>
					<img src="<%= @cocktail.image %>" alt="Drink Image">
				</div>
			</div>
		</div>



