

<div class="container">

	<div class="group-form">
		<div class="row">
			<h1>Creating new Coctail</h1>
			<div class="col-xs-12 col-sm-8 col-sm-offset-2">
				<%= simple_form_for @cocktail do |f| %>
				<%= f.input :name,  label: false, placeholder: 'give the cocktail a name'  %>
		
					<div class="col-xs-6">
						<%= f.input :image, label: false, placeholder: 'upload a picture'%>
						<%= f.input :image_cache, as: :hidden %>
					</div>
	
				<div class="col-xs-6 col-xs-offset-0">
					<%= f.button :submit, "Add this cocktail", class: "btn-treehouse" %>
					<% end %>
				</div>
			</div>

			</div>
		</div>
	</div>
</div>





